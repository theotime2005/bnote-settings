{
  "name": "bnote-settings",
  "version": "6.0.0-alpha.0",
  "description": "B.note Settings - Configuration tool for B.note application",
  "author": "theotime2005",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^22.14.0"
  },
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:wait": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "production": "sh script/release.sh",
    "release": "commit-and-tag-version",
    "prepare": "husky",
    "add-new-setting": "node ./src/scripts/add-new-setting.js",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:all": "npm run build && electron-builder --mac --win"
  },
  "dependencies": {
    "@pinia/testing": "^1.0.2",
    "@vue/compiler-sfc": "^3.5.21",
    "js-cookie": "^3.0.5",
    "pinia": "^3.0.3",
    "translatte": "^3.0.1",
    "vite-plugin-env-compatible": "^2.0.1",
    "vue": "^3.5.21",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.5.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/test-utils": "^2.4.6",
    "commit-and-tag-version": "^12.6.0",
    "concurrently": "^9.2.1",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.35.0",
    "eslint-plugin-i18n-json": "^4.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "eslint-plugin-vue": "^10.4.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "vite": "^7.1.5",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.theotime2005.bnote-settings",
    "productName": "B.note Settings",
    "directories": {
      "buildResources": "build",
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/main.js",
      "package.json"
    ],
    "extraResources": [
      "public/favicon.ico"
    ],
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
